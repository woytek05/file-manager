<div class="w-full h-screen">
    {{> dialog}}
    {{> sidebar}}

    <div class="p-4 sm:ml-64">
        <div class="mb-4">
            {{#each folders}}
                <span class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300" onclick="redirectToPath('{{path}}', false)">
                    {{name}}
                </span>
            {{/each}}
        </div>
        <div class="grid grid-flow-row-dense sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-4 mb-4">
            {{#each storage}}
                {{> storageElement}}
            {{/each}}
        </div>
    </div>
</div>
